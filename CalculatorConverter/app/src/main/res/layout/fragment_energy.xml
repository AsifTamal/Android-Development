            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kilojoule"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_gram_calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_gram_calorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/gram_calorie"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_kilocalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_kilocalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kilocalorie"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_watt_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_watt_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/watt_hour"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
