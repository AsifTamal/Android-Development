<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp" tools:context=".MainActivity"
    android:id="@+id/relative1"
    android:background="@color/colorPrimary"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f5a264bf"
android:layout_marginBottom="100dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textStyle="bold|italic"

        android:text="Calculator and Unit Converter"
        android:textAlignment="center"

        android:textSize="25sp"
        android:textColor="#c1a1bf64"

        />

</LinearLayout>



   <Button
       android:id="@+id/btnCalculator2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Standard calculator"



       />

    <Button
        android:id="@+id/btnScientificCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scientific Calculator"
        android:layout_below="@id/btnCalculator2"

        />
    <Button
        android:id="@+id/btnUnitConverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Converter"
        android:layout_below="@id/btnScientificCalculator"

        />

</LinearLayout>