<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UnitConverterFragmentsTabs.FrequencyFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_hertz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_hertz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hertz"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_kilohertz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_kilohertz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kilohertz"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_megahertz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_megahertz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/megahertz"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_gigahertz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_gigahertz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/gigahertz"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>