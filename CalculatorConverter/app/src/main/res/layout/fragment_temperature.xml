<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UnitConverterFragmentsTabs.TemperatureFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_celsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_celsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/celsius"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_fahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_fahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fahrenheit"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_kelvin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_kelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kelvin"
            android:inputType="numberSigned|numberDecimal" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>